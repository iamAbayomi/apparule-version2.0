<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cuesoft.io.apparule.views.AddItemActivity">

    <TextView
            style="@style/PinkTextView"
            android:text="Add the picture of the cloth"
            android:textStyle="italic"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/addImageCardView"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="22dp"
            app:cardBackgroundColor="#F5E0E0">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_photo_library_black_24dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/PinkTextView"
        android:text="What would you call the cloth"/>

    <EditText
        style="@style/PinkEditTextView"
        android:textColorHint="@color/LightPink"
    />

    <TextView
        style="@style/PinkTextView"
        android:text="How would you describe the cloth"
    />

    <EditText
        style="@style/PinkEditTextView"
        android:layout_height="62dp"

    />
    <Button android:layout_width="144dp"
            style="@style/BlueButton"
            android:layout_marginTop="22dp"
            android:layout_gravity="right"
            android:text="Done"
    />


</LinearLayout>
