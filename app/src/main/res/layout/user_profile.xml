<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
                android:text="Firstname"
                android:id="@+id/firstnameView"
                style="@style/SmallTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="32dp"
                tools:layout_editor_absoluteY="51dp" tools:layout_editor_absoluteX="36dp"/>
        <TextView
                android:text="SecondName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/secondnameView"
                style="@style/SmallTextView"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                android:layout_marginStart="88dp" app:layout_constraintStart_toEndOf="@+id/firstnameView"/>
        <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailView"
                style="@style/SmallEditView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginTop="57dp"
                app:layout_constraintTop_toBottomOf="@+id/firstnameView"/>
        <TextView
                android:text="Phone Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallEditView"
                android:id="@+id/phonenumberView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginTop="68dp"
                app:layout_constraintTop_toBottomOf="@+id/emailView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
