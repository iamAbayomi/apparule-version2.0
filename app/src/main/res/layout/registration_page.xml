<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container">
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    >
        <TextView
                style="@style/HeaderTextView"
                android:text="Register"
                android:id="@+id/RegisterTextView"
                android:fontFamily="@font/open_sans"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="52dp"/>


    <TextView
            style="@style/SmallTextView"
            android:id="@+id/firstnameTextView"
            android:text="First Name"
            android:fontFamily="@font/open_sans"
            app:layout_constraintTop_toBottomOf="@id/RegisterTextView"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

    <EditText
            android:id="@+id/firstnameEditText"
            style="@style/SmallEditView"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/firstnameTextView"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@id/lastnameEditText"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            style="@style/SmallTextView"
            android:id="@+id/lastnameTextView"
            android:text="Last Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/firstnameTextView"
            app:layout_constraintStart_toEndOf="@id/firstnameTextView"
            app:layout_constraintHorizontal_bias="0.444"/>

        <EditText
                android:id="@+id/lastnameEditText"
                app:layout_constraintTop_toBottomOf="@id/lastnameTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/firstnameEditText"
                style="@style/SmallEditView"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/open_sans"/>

    <TextView
            android:id="@+id/emailTextView"
            style="@style/SmallTextView"
            android:text="Email"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/firstnameEditText"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="264dp"
            tools:layout_editor_absoluteX="22dp"/>

    <EditText
            android:id="@+id/emailEditText"
            style="@style/CustomEditText"
            app:layout_constraintTop_toBottomOf="@id/emailTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            tools:layout_editor_absoluteY="343dp"
            app:layout_constraintStart_toStartOf="parent"
           />


    <TextView
            android:id="@+id/phoneNumberTextView"
            style="@style/SmallTextView"
            android:text="Phone Number"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailEditText"
            tools:layout_editor_absoluteY="417dp" tools:layout_editor_absoluteX="22dp"/>

    <EditText
            android:id="@+id/phoneNumberEditText"
            style="@style/CustomEditText"

            app:layout_constraintTop_toBottomOf="@id/phoneNumberTextView"
            android:layout_marginTop="24dp"
            tools:layout_editor_absoluteY="472dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/passwordTextView"
            style="@style/SmallTextView"
            android:text="Password"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberEditText"
            tools:layout_editor_absoluteY="548dp" tools:layout_editor_absoluteX="22dp"/>

    <EditText
            android:id="@+id/passwordEditText"
            style="@style/CustomEditText"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/passwordTextView"
            android:layout_marginTop="24dp"
            tools:layout_editor_absoluteY="602dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            android:id="@+id/registerButton"
            style="@style/BlueButton"
            android:text="REGISTER"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@id/passwordEditText"
            tools:layout_editor_absoluteY="712dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>